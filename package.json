{
  "name": "mwema-desktop-app",
  "productName": "Mwema App",
  "version": "1.0.0",
  "description": "Mwema Kids Desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux deb"
  },
  "author": {
    "name": "Stephanie",
    "email": "sshawa48@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "toastify-js": "^1.12.0"
  },
